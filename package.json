{
  "name": "my-new-project",
  "version": "1.0.0",
  "description": "",
  "author": "Minh Phan",
  "license": "MIT",
  "scripts": {
    "start": "cross-env BABEL_ENV=node NODE_ENV=production node dist/index.js",
    "dev": "NODE_ENV=development nodemon ./src/index.js --exec babel-node --presets @babel/env --ignore src/client",
    "build:server": "cross-env BABEL_ENV=node NODE_ENV=production babel src/server -d dist/server --ignore public && cross-env BABEL_ENV=node NODE_ENV=production babel src/index.js -o dist/index.js && cp -r src/server/views/ dist/server/views/",
    "build:client": "cross-env BABEL_ENV=react-production NODE_ENV=production webpack --config ./src/client/webpack.config.js --progress --profile --colors",
    "test": "cross-env BABEL_ENV=node mocha --compilers js:@babel/register --timeout=3000 --exit",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint --fix src/**/*.js",
    "build": "yarn clean && yarn build:server && yarn build:client",
    "serve": "yarn build && yarn start",
    "deploy": "yarn build && NODE_ENV=production pm2 start dist/index.js -i max --name shopify-mern -o logs/pm2.log --merge-logs -e logs/pm2-e.log",
    "restart": "yarn build && NODE_ENV=production pm2 restart dist/index.js -i max --name shopify-mern -o logs/pm2.log --merge-logs -e logs/pm2-e.log",
    "stop": "pm2 stop shopify-mern",
    "delete": "pm2 delete shopify-mern",
    "clean": "rm -rf ./assets && mkdir ./assets && rm -rf ./dist && mkdir ./dist"
  },
  "dependencies": {
    "@babel/runtime": "^7.0.0-beta.47",
    "@shopify/polaris": "^2.0.0",
    "@shopify/shopify-express": "https://github.com/paul-phan/shopify-express",
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.18.3",
    "chalk": "^2.4.1",
    "cheerio": "^1.0.0-rc.2",
    "clockwork": "^0.1.4",
    "compression": "^1.7.2",
    "connect-mongo": "^2.0.1",
